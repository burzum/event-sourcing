{
	"name": "psa/event-sourcing",
	"description": "Event Sourcing Library",
	"keywords": ["framework-agnostic", "event-sourcing", "cqrs", "ddd", "events"],
	"type": "library",
	"authors": [
		{
			"name": "Florian Kr√§mer",
			"homepage": "https://florian-kraemer.net"
		}
	],
	"require": {
		"php": "^7.4",
		"ext-json": "*",
		"beberlei/assert": "^3.2",
		"prooph/event-store": "dev-master as v8.0.0-RC-1",
		"prooph/event-store-client": "dev-master as 1.0",
		"psr/log": "^1.1",
		"ramsey/uuid": "^3.8"
	},
	"require-dev": {
		"guzzlehttp/guzzle": "^6.5",
		"php-http/guzzle6-adapter": "^2.0",
		"phpro/grumphp": "^1.1.0",
		"phpstan/phpstan": "^0.12.56",
		"phpunit/phpunit": "^9.4",
		"prooph/event-store-http-client": "dev-master",
		"psr/cache": "^1.0",
		"squizlabs/php_codesniffer": "^3.5.8"
	},
	"autoload": {
		"psr-4": {
			"Psa\\EventSourcing\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Psa\\EventSourcing\\Test\\": "tests\\"
		}
	},
	"scripts": {
		"test": [
			"./bin/phpunit"
		],
		"coverage": [
			".\\bin\\phpunit --coverage-html ./tmp/coverage"
		],
		"cscheck": [
			".\\bin\\phpcs .\\src .\\tests --standard=./phpcs.xml"
		],
		"csfix": [
			".\\bin\\phpcbf .\\src .\\tests --standard=./phpcs.xml"
		],
		"analyze": [
			".\\bin\\phpstan analyse -l 5 -c phpstan.neon .\\src\\"
		],
		"phive": [
			"php config\\composer_phive.php"
		]
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"bin-dir": "bin",
		"sort-packages": true,
		"prestissimo": {
			"maxConnections": 12,
			"minConnections": 6
		}
	}
}
